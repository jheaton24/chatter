<% provide(:title, 'Users') %>
<h1>Active Users</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td>&nbsp;<%= link_to 'Show', user_path(user) %> |</td>
        <td>&nbsp;<%= link_to 'Edit', edit_user_path(user) %> |</td>
        <td>&nbsp;<%= link_to 'Delete', 
                              user, 
                              method: :delete, 
                              data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create new user", signup_path %>
